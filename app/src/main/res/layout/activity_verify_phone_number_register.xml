<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.VerifyPhoneNumberLogin">
    <TextView
        android:id="@+id/tvNhapso"
        android:gravity="center"
        android:textSize="25sp"
        android:fontFamily="@font/myriadprobold"
        android:textColor="#d73b64"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Nhập mã xác nhận"/>
    <TextView
        android:layout_below="@id/tvNhapso"
        android:id="@+id/tvtitle"
        android:gravity="center"
        android:textSize="22sp"
        android:fontFamily="@font/myriadproregular"
        android:textColor="#d73b64"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Register"/>

    <com.mukesh.OtpView
        android:layout_centerInParent="true"
        android:id="@+id/otp_VerifyPhone"
        android:textSize="30sp"
        android:inputType="number"
        android:fontFamily="@font/myriadproregular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:itemBackground="#d73b64"
        android:textColor="@android:color/white"
        app:itemCount="6"
        app:lineColor="@color/colorPrimary"
        />
    <Button
        android:id="@+id/btnComfirm"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/agencyr"
        android:background="#038FB5"
        android:layout_alignParentBottom="true"
        android:text="COMFIRM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>