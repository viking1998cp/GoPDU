<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.SettingCustomerFragment"
    >
    <androidx.appcompat.widget.Toolbar
        android:background="@drawable/dobong"
        app:title="Register Customer Account"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imvCustomerAvatar"
            android:src="@drawable/ic_female"
            android:layout_width="200dp"
            android:layout_height="150dp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="14sp"
                android:fontFamily="@font/myriadproregular"
                android:id="@+id/editName"
                android:inputType="text"
                android:hint="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="14sp"
                android:fontFamily="@font/myriadproregular"
                android:id="@+id/editBirthdate"
                android:inputType="date"
                android:hint="Birthdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="40dp"
                android:layout_marginTop="4sp"
                android:fontFamily="@font/myriadproregular"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"/>
            <RadioGroup
                android:orientation="horizontal"
                android:id="@+id/radioGroupGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rdMale"
                    android:textSize="14sp"
                    android:fontFamily="@font/myriadproregular"
                    android:layout_marginRight="20dp"
                    android:text="Male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdFemale"
                    android:textSize="14sp"
                    android:fontFamily="@font/myriadproregular"
                    android:text="Female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="14sp"
                android:fontFamily="@font/myriadproregular"
                android:id="@+id/editPhone"
                android:inputType="number"
                android:hint="Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:textSize="18sp"
            android:fontFamily="@font/myriadproregular"
            android:layout_marginTop="20dp"
            android:id="@+id/btnRegister"
            android:text="Comfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F05681"/>
        <Button
            android:textSize="18sp"
            android:fontFamily="@font/myriadproregular"
            android:layout_marginTop="20dp"
            android:id="@+id/btnBack"
            android:text="Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#038FB5"/>


    </LinearLayout>

</LinearLayout>